<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/lightGrey"
        android:gravity="end|bottom"
        android:padding="10dp"
        android:text="@string/calc_text"
        android:textSize="48sp" />

    <!-- Row 1: Buttons 7, 8, 9, Divide -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSeven"
            style="@style/CalculatorButton"
            android:text="@string/_7" />


        <Button
            android:id="@+id/btnEight"
            style="@style/CalculatorButton"
            android:text="@string/_8" />

        <Button
            android:id="@+id/btnNine"
            style="@style/CalculatorButton"
            android:text="@string/_9" />

        <Button
            android:id="@+id/btnDivide"
            android:onClick="onOperatot"
            style="@style/CalculatorButton"
            android:text="@string/divide" />

    </LinearLayout>

    <!-- Row 2: Buttons 4, 5, 6, Plus -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFour"
            style="@style/CalculatorButton"
            android:text="@string/_4" />

        <Button
            android:id="@+id/btnFive"
            style="@style/CalculatorButton"
            android:text="@string/_5" />

        <Button
            android:id="@+id/btnSix"
            style="@style/CalculatorButton"
            android:text="@string/_6" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/CalculatorButton"
            android:onClick="onOperatot"
            android:text="@string/multiply" />

    </LinearLayout>

    <!-- Row 3: Buttons 1, 2, 3, Minus -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOne"
            style="@style/CalculatorButton"
            android:text="@string/_1" />

        <Button
            android:id="@+id/btnTwo"
            style="@style/CalculatorButton"
            android:text="@string/_2" />

        <Button
            android:id="@+id/btnThree"
            style="@style/CalculatorButton"
            android:text="@string/_3" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/CalculatorButton"
            android:onClick="onOperatot"
            android:text="@string/minus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnZero"
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:onClick="onDecimalePoint"
            android:text="@string/dote" />
        <Button
            android:id="@+id/btnDote"
            style="@style/CalculatorButton"
            android:layout_weight="1"
            android:text="@string/_0" />

        <Button
            android:id="@+id/btnCLR"
            style="@style/CalculatorButton"   android:layout_weight="2"
            android:text="@string/_clr" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/CalculatorButton"
            android:onClick="onOperatot"
            android:text="@string/plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEqual"
            style="@style/CalculatorButton"
            android:layout_weight="2"
            android:onClick="onEqual"
            android:text="@string/_equal"

            />


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
